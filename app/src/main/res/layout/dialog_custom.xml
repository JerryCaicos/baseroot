<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn_white_round_corner"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dip" >

        <TextView
            android:id="@+id/tv_cdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/pub_color_fifteen"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" >

            <TextView
                android:id="@+id/tv_cdialog_content"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/pub_color_fifteen"
                android:textSize="18sp" />
        </ScrollView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/pub_color_six" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cdialog_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/app_dialog_cancel"
            android:textColor="@color/pub_color_fifteen"
            android:textSize="20sp" />

        <View
            android:id="@+id/view_cdialog_btn_divider"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="@color/pub_color_six" />

        <Button
            android:id="@+id/btn_cdialog_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/app_dialog_confirm"
            android:textColor="@color/pub_color_twenty_one"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>