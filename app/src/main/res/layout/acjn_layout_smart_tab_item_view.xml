<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="39dip"
              android:background="@color/translucent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_jshop_recommend_tab"
        android:layout_width="match_parent"
        android:layout_height="39dip">

        <TextView
            android:id="@+id/view_jshop_recommend_tab_name"
            android:layout_width="84dip"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/acjn_smart_tab_text_bg"
            android:text="为您推荐"
            android:textColor="#232325"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/view_jshop_recommend_tab_under_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/acjn_smart_tab_text_arrow"/>
    </RelativeLayout>
</LinearLayout>